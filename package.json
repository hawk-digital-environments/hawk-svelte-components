{
  "name": "@hawk-hhg/svelte-components",
  "version": "0.5.0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "storybook dev -p $DOCKER_PROJECT_PORT --no-open",
    "dev:ssl": "storybook dev -p $DOCKER_PROJECT_PORT --no-open --https --ssl-cert /etc/ssl/certs/cert.pem --ssl-key /etc/ssl/certs/key.pem",
    "build:storybook": "storybook build"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/addon-svelte-csf": "^5.0.0-next.0",
    "@storybook/blocks": "^8.6.7",
    "@storybook/experimental-addon-test": "^8.6.7",
    "@storybook/manager-api": "^8.6.10",
    "@storybook/svelte": "^8.6.7",
    "@storybook/sveltekit": "^8.6.7",
    "@storybook/test": "^8.6.7",
    "@storybook/theming": "^8.6.10",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/node": "^22.13.12",
    "@types/temp": "^0.9.4",
    "@vitest/browser": "^3.0.9",
    "@vitest/coverage-v8": "^3.0.9",
    "node-html-parser": "^7.0.1",
    "playwright": "^1.51.1",
    "postcss-modules": "^6.0.1",
    "publint": "^0.3.2",
    "sass": "^1.86.0",
    "storybook": "^8.6.7",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-preprocess": "^6.0.3",
    "svgo": "^3.3.2",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.9"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "melt": "^0.29.3",
    "runed": "^0.25.0",
    "tabbable": "^6.2.0"
  }
}
